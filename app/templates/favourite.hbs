<h2 style="margin:20px">Favourites</h2>
<div class="container">
  {{#each model as |trending|}}

    {{#paper-card as |card|}}

      <img {{action "transitionToDetails" trending}}
        src="https://image.tmdb.org/t/p/w500/{{trending.poster_path}}"
        style="width:20vw; height:50vh" alt="" title={{trending.title}} />

      {{#paper-button raised=true primary=true onClick=(action 'deleteFavourites' favourite)}}Delete from Favourites{{/paper-button}}

    {{/paper-card}}

  {{/each}}

</div>

